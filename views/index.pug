extends layout

block content
  div.container
    .row
      br
      a.btn.btn-primary(href="/persona/nuevo") Nuevo
      table.table.table-striped
        thead
          tr
            th Nombres
            th Apellidos
            th Edad
            th(colspan="2") Operaci√≥n
          for persona in personas 
            tr
              td= persona.nombres
              td= persona.apellidos
              td= persona.edad
              td
                a(href='/persona/modificar/'+ persona._id) Modificar
              td
                a(href='/persona/eliminar/'+ persona._id) Eliminar
